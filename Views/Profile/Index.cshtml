@model IdentityServerAspNetIdentity.Controllers.Profile.ProfileUpdateViewModel

<div class="diagnostics-page">
    <div class="lead">
        <h1>User Profile</h1>
    </div>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2>General Info</h2>
                </div>
                @if (Model.IsUpdated)
                {
                    <div class="alert alert-warning">
                        <strong>User profile have been updated successfully.</strong>
                    </div>
                }
                <div class="card-body">
                    <form asp-route="Profile">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" readonly asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label asp-for="DisplayName">Display Name</label>
                            <input class="form-control" asp-for="DisplayName" autofocus>
                        </div>
                        <button class="btn btn-primary" name="button" value="login">Update</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>        
    </div>
</div>
